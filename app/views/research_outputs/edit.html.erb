<% title "#{@plan.title} - edit research output" %>

<div class="row">
  <div class="col-md-12">
    <!-- render the project title -->
    <h1><%= @plan.title %></h1>
  </div>
</div>

<% content_for :plan_tab_body do %>
  <h2>
    <%= _("Editing %{research_output_title}") % {
          research_output_title: ResearchOutputPresenter.display_name(research_output: @research_output) } %>
    <%= link_to _('View all research outputs'), plan_research_outputs_path(@plan),
                                            class: "btn btn-default pull-right" %>
  </h2>
  <div class="row">
    <div class="col-md-12">
      <%= form_for @contributor, url: plan_research_output_path(@plan, @research_output),
                                 html: { method: :put, class: "research_output_form" } do |f| %>
        <%= render partial: "research_outputs/form",
                   locals: { form: f, plan: @plan, research_output: @research_output } %>
      <% end %>
    </div>
  </div>
<% end %>

<%= render partial: "plans/navigation", locals: { plan: @plan } %>

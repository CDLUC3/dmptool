<%# locals: research_output %>

<% content_for :filters do %>
  <%
  by_field_tooltip = _("Refine your search by sprecifying a field of science.")
  by_discipline_tooltip = _("Refine your search by sprecifying a discipline.")
  %>

  <span class="col-md-5">
    <%= select_tag :"research_output[metadata_field_filter]",
                   options_for_select(ResearchOutputPresenter.selectable_metadata_fields),
                   include_blank: _("- Select a field of science -"),
                   class: "form-control",
                   title: by_field_tooltip,
                   data: { toggle: "tooltip", placement: "bottom" } %>
  </span>

  <span class="col-md-5">
    <%= select_tag :"research_output[metadata_discipline_filter]",
                   options_for_select(ResearchOutputPresenter.selectable_metdata_disciplines),
                   include_blank: _("- Select a discipline -"),
                   class: "form-control",
                   title: by_discipline_tooltip,
                   data: { toggle: "tooltip", placement: "bottom" } %>
  </span>
<% end %>

<%= render partial: "layouts/modal_search/form",
           locals: {
             namespace: "metadata_standards",
             label: "Metadata Standard",
             search_examples: "(e.g. DataCite, Dublin, Biological, etc.)",
             model_instance: research_output,
             search_path: metadata_standard_search_plan_path(research_output.plan),
             search_method: :get
           } %>

<%# locals: label  - The display name to help provide context to what you are adding the standard to (e.g. Plan) %>
<% label = label || _('Plan') %>

<h4><%= _('Add a new metadata standard for your %{label}') % { label: label } %></h4>
<%= form_for(MetadataStandard.new, url: '#', remote: true) do |f| %>
  <div class="form-group row">
    <div class="col-md-8">
      <label for="standard-name"><%= _('Name') %></label>
      <input type="text" id="standard-name" class="form-control custom-item-title" aria-required="true"/>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-8">
      <label for="standard-uri"><%= _('URL') %></label>
      <input type="url" id="standard-uri" class="form-control custom-item-uri" aria-required="true"/>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-8">
      <label for="standard-description"><%= _('Description') %></label>
      <input type="text" id="standard-description" class="form-control custom-item-description" aria-required="true"/>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-8">
      <button type="button" class="btn btn-default custom-item-button" id="standard-submit">
        <%= _("Add standard to your %{label}") % { label: label } %>
      </button>
      <%= link_to _("Cancel"), '#', class: "btn btn-default toggle-custom-items",
                  aria: { label: _('Cancel adding a new standard') } %>
      <span id="custom-standard-errors" class="hidden red custom-item-errors">
        <%= _('You must provide a name, description and URL.') %>
      </span>
    </div>
  </div>
<% end %>

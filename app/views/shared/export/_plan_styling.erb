<%
def margin_mm_to_px(val)
  crosswalk = {
    '5': '18.898px',
    '6': '22.677px',
    '7': '26.457px',
    '8': '30.236px',
    '9': '34.016px',
    '10': '37.795px',
    '11': '41.575px',
    '12': '45.354px',
    '13': '49.134px',
    '14': '52.913px',
    '15': '56.693px',
    '16': '60.472px',
    '17': '64.252px',
    '18': '68.031px',
    '19': '71.811px',
    '20': '75.591px',
    '21': '79.37px',
    '22': '83.15px',
    '23': '86.929px',
    '24': '90.709px',
    '25': '94.488px'
  }
  return crosswalk[val.to_s.to_sym] || crosswalk[:'25']
end

font_family = font_face.downcase.include?('tinos') ? 'Tinos' : 'Roboto'
%>

<style>
  @page {
    margin-top: <%= margin_mm_to_px(margin_top) %>;
    margin-right: <%= margin_mm_to_px(margin_right) %>;
    margin-bottom: <%= margin_mm_to_px(margin_bottom) %>;
    margin-left: <%= margin_mm_to_px(margin_left) %>;
  }
  body {
    font-family: <%= font_family %>;
    font-size: <%= font_size %>;
    line-height: 150%;
  }
  h1 {
      font-size: 1.5rem;
      font-weight: bold;
      padding: 0;
    }
    h2 {
      font-size: 1.3rem;
      font-weight: bold;
      padding: 0;
      margin: 1em 0 0 0;
    }
    h3 {
      font-size: 1.1rem;
      font-weight: bold;
      padding: 0;
      margin: 1em 0 0 0;
    }
    h2 + div.question > h3 {
      margin: 0;
    }
    table, tr, td, th, tbody, thead, tfoot {
      page-break-inside: avoid !important;
    }
    table {
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid black !important;
      padding: 2px;
    }
    p {
      margin: 0.25em 0;
    }
    .cover-page {
      font-size: 1.1rem;
    }
    .question {
      margin-top: 15px;
      margin-bottom: 10px;
    }
    .question:first-child {
      margin-top: 0;
    }
    .annotations {
      margin-left: 15px;
      margin-bottom: 10px;
    }
    hr.bottom {
      position: absolute;
      bottom: 0;
    }
    .bold {
      font-weight: bold;
    }
</style>
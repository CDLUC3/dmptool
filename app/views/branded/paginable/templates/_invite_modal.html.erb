<div id="modal-invite"
     class="modal fade modal-invite"
     tabindex="-1"
     role="dialog"
     aria-labelledby="modal-invite-label"
     aria-hidden="true">

  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <%= button_tag "X", type: "button", class: "close",
                       data: { dismiss: "modal" },
                       aria: { label: _("Close") } %>

        <h3 id="modal-invite-label" class="modal-title">
          <%= _("Email template") %>
        </h3>
      </div>

      <div class="modal-body">

      </div>

    </div>
  </div>
</div>

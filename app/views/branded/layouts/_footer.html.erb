<%
  # Override the default Rails route helper for the contact_us page IF an alternate contact_us url was defined
  # in the branding config file
  contact_us = Rails.application.config.branding[:organisation][:contact_us_url] || contact_us_path
%>

<div class="footer-top">
  <div class="footer-menu">
    <!-- Links -->
    <nav class="navbar">
      <div class="container-fluid">
        <ul class="nav navbar-nav">
          <li><a href="<%= about_us_path %>"><%= _('About') %></a></li>
          <li><a href="<%= terms_path %>"><%= _('Terms of use') %></a></li>
          <li><a href="<%= privacy_path %>"><%= _('Privacy statement') %></a></li>
          <li><a href="https://www.cdlib.org/about/accessibility.html"><%= _('Accessibility') %> <em class="sr-only"><%= _('new window') %></em> <i class="fa fa-external-link">&nbsp;</i></a></li>
          <li><a href="https://github.com/cdluc3/dmptool"><%= _('Github') %> <em class="sr-only"><%= _('new window') %></em> <i class="fa fa-external-link">&nbsp;</i></a></li>
          <li><a href="<%= contact_us_path %>"><%= _('Contact us') %></a></li>
        </ul>
      </div>
    </nav>
  </div>
  <div class="footer-social">
    <!-- Social media -->
    <nav class="navbar navbar-right">
      <div class="container-fluid">
        <ul class="nav navbar-nav">
          <li>
            <a href="https://twitter.com/TheDMPTool" target="_blank"><span class="fa fa-twitter-square large"><span class="sr-only"><%= _("Twitter") %></span></span></a>
          </li>
          <li>
            <a href="https://blog.dmptool.org/feed" target="_blank"><span class="fa fa-rss-square large"><span class="sr-only"><%= _("RSS") %></span></span></a>
          </li>
        </ul>
      </div>
    </nav>
  </div>
</div>

<div class="footer-bottom">
  <div class="footer-copyright">
    <!-- Copyright -->
    <p>
      <%= sanitize _('DMPTool is a service of the %{uc3} of the %{cdl}') % {
        uc3: "<a href=\"https://www.cdlib.org/uc3/\" target=\"_blank\">University of California Curation Center <em class=\"sr-only\">(new window)</em></a>",
        cdl: "<a href=\"http://www.cdlib.org/\" target=\"_blank\">California Digital Library <em class=\"sr-only\">(new window)</em></a>"
      } %>
      <br>
      <%= _('Copyright 2010-%{current_year} The Regents of the University of California') % {
        current_year: Date.today.year
      } %>
    </p>
  </div>
  <div class="footer-logo pull-right">
    <!-- Logo -->
    <%= image_tag('DMPTool_logo_blue_shades_v1b3b_no_tag.svg', alt: 'DMPTool Logo') %>
  </div>
</div>

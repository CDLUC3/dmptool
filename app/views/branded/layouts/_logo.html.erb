<a href="<%= root_path %>" title="home">
  <% if user_signed_in? && current_user.org.present? && current_user.org.logo.present? %>
    <%= image_tag(current_user.org.logo.thumb('100x100%').url,
                                  alt: "#{current_user.org.name} logo",
                                  class: "org-logo",
                                  title: current_user.org.name) %>

  <% else %>
    <%= link_to(image_tag("DMPTool_logo_blue_shades_v1b3b.svg",
                          alt: "#{ApplicationService.application_name} #{_('logo')}",
                          class: "app-logo",
                          title: ApplicationService.application_name),
                root_path) %>
  <% end %>
</a>

<%
# Convert points to pixels
case font_size
when '8pt'
  pixel_size = '11px'
when '9pt'
  pixel_size = '12px'
when '10pt'
  pixel_size = '13px'
when '11pt'
  pixel_size = '15px'
when '12pt'
  pixel_size = '16px'
when '13pt'
  pixel_size = '17px'
when '14pt'
  pixel_size = '19px'
else
  pixel_size = '15px'
end
%>

<style>
  @import 'https://fonts.googleapis.com/css?family=<%= font_face.downcase.include?('times') ? 'Times' : 'Roboto' %>';

  html body p {
    font-family: <%= font_face %>;
    font-size: <%= pixel_size %>;
    line-height: 150%;
  }

  .break-after {
    page-break-after: always;
  }
  .break-before {
    page-break-before: always;
  }

  h1 {
    font-family: <%= font_face %>;
    font-size: 1.5rem;
  }
  h2 {
    font-family: <%= font_face %>;
    font-size: 1.3rem;
  }
  h3 {
    font-family: <%= font_face %>;
    font-size: 1.1rem;
    font-weight: bold;
  }

  div.cover-page p {
    margin-left: 10px;
    margin-bottom: 35px;
  }

  div.section {
    margin-bottom: 35px;
  }
  div.question {
    margin-bottom: 25px;
  }

  table, tr, td, th, tbody, thead, tfoot {
    page-break-inside: avoid !important;
  }
  table {
    border-collapse: collapse;
  }
  table caption {
    font-family: <%= font_face %>;
    font-weight: bold;
    font-size: 1.1rem;
    text-align: left;
  }
  th, td {
    border: 1px solid black !important;
    padding: 2px;
  }

  .annotations {
    margin-left: 15px;
    margin-bottom: 10px;
  }

  ul.research_output {
    margin-bottom: 15px;
  }
  ul.research_output li {
    margin-bottom: 5px;
  }
  ul.research_output li strong {
    padding-right: 5px;
  }
</style>
#!/usr/bin/env sh

if ! gem list foreman -i --silent; then
  echo "Installing foreman..."
  gem install foreman
fi

# Only run this the first time!
#if ! $FIRST_TIME; then
if [ -z $FIRST_TIME ]; then
echo "Not the first time"
else
  echo "Running db:setup to initialize the DB"
  #exec $(rails db:drop && rails db:create && rails db:schema:load)
  exec rails db:schema:load
fi

exec foreman start -f Procfile.dev "$@"

<div class="sign-in">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#sign-in-form" role="tab" aria-controls="sign-in-form" data-toggle="tab">
        <%= _('Sign in') %>
      </a>
    </li>

    <li role="presentation">
      <a href="#create-account-form" role="tab" aria-controls="create-account-form" data-toggle="tab">
        <%= _('Create account') %>
      </a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="sign-in-form" role="tabpanel" class="tab-pane active">
      <div class="panel panel-default">
        <div class="panel-body">
          <% sign_in_options = Rails.configuration.x.sign_in_options || ["sign_in_form"] %>

          <% sign_in_options.each_with_index do |partial, idx| %>
            <%= render partial: partial, locals: { resource: resource } %>

            <% if (idx + 1) < sign_in_options.length %>
              <p class="text-center fontsize-h4 bold">- <%= _('or') %> -</p>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>

    <div id="create-account-form" role="tabpanel" class="tab-pane">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="form-group col-md-12">
            <%= render partial: 'shared/authentication/create_account_form',
                      locals: { resource: resource } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

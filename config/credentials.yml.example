# This is an example credentials file.
# To real credentials file is encrypted.
# To create it run
# EDITOR=my_ave_editor rails credentials:edit
# and paste the rest of this file in, filling in the correct values
#
# If you need to generate a new secret you can run the `rails secret` utility

database:
  host: "my_host_name"
  username: "my_db_user"
  password: "my_db_password"


devise_pepper: "my_pepper"

dmphub:
  client_id: "my_client_id"
  client_secret: "my_client_secret"

dragonfly:
  secret: "my_secret"

orcid:
  # Sandbox
  client_id: "my_client_id"
  client_secret: "my_client_secret"
  sandbox: true

recaptcha:
  site_key: "mykey"
  secret_key: "my_secret"


# Used as the base secret for all MessageVerifiers in Rails, including the one protecting cookies.
secret_key_base: "my_secret"

dmproadmap:
  database_username: root
  database_password:

  devise_secret: "my_devise_secret"
  devise_pepper: "my_devise_pepper"

  dmphub_client_id: "my_dmphub_client_id"
  dmphub_client_secret: "my_dmphub_client_secret"

  dragonfly_secret: "my_dragonfly_secret"

  orcid_client_id: "my_orcid_client_id"
  orcid_client_secret: "my_orcid_client_secret"
  orcid_sandbox: true

  recaptcha_site_key: "my_recaptcha_site_key"
  recaptcha_secret_key: "my_recaptcha_secret_key"

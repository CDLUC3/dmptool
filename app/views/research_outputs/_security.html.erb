<%# locals: form, presenter %>

<%
sensitive_data_tooltip = _("TODO: provide a better description! -- The research output will contain information that is sensitive.")
personal_data_tooltip = _("The research output will contain personally identifiable information (PII) data like emails, SSNs, etc.")
%>

<div class="panel panel-default">
    <div class="panel-heading" role="tab">
      <div class="panel-title pull-left"
           data-toggle="collapse"
           aria-expanded="false"
           aria-controls="security-section"
           id="security-section-heading"
           href="#security-section">
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= _("Security and Privacy") %>
      </div>
    </div>
</div>

<div id = "security-section"
     class = "panel-collapse collapse"
     role="tabpanel"
     aria-labelledby="security-section-heading">
  <div class="panel-body">
    <div class="form-group row">
      <div class="col-md-12">
        <h3><%= _("Content") %></h3>
      </div>
      <div class="col-md-12">
        <span class="col-md-3">
          <%= form.label :sensitive_data do %>
            <%= form.check_box :sensitive_data, data: { toggle: "tooltip" },
                               title: sensitive_data_tooltip %>
            <%= _('may contain sensitive data?') %>
          <% end %>
        </span>
        <span class="col-md-3">
          <%= form.label :personal_data do %>
            <%= form.check_box :personal_data, data: { toggle: "tooltip" },
                               title: personal_data_tooltip %>
            <%= _('may contain PII?') %>
          <% end %>
        </span>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-12">
        <h3><%= _("Anticipated release") %></h3>
      </div>
      <div class="col-md-12">
        <span class="col-md-8">
          <span class="col-md-4">
            <%= form.label(:release_date, _("Date"), class: "control-label") %>
            <%= form.date_field :release_date, class: "form-control" %>
          </span>
          <span class="col-md-4">
            <%= form.label(:access, _("Initial access level"), class: "control-label") %>
            <%= form.select :access, options_for_select(presenter.selectable_access_types, form.object.access),
                                    { selected: form.object.access },
                                    { class: "form-control bootstrap-select" } %>
          </span>
        </span>
      </div>
    </div>
  </div>
</div>

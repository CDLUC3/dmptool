<div id="modal-define-custom-repository"
     class="modal fade modal-search"
     tabindex="-1"
     role="dialog"
     aria-labelledby="modal-search-label"
     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <%= button_tag "X", type: "button", class: "close",
                       data: { dismiss: "modal" },
                       aria: { label: _("Close") } %>
        <h3><%= _('Define a Custom Repository for Template') %> <%= template.title %></h3>
      </div>

      <div class="modal-body">
        <%= form_for(template, url: define_custom_repository_org_admin_template_path(template), method: :put) do |f| %>
                <div class="row">
                    <div class="form-group col-xs-8">
                        <%= f.label(:name, _('Name'), class: 'control-label') %>
                        <%= f.text_field(:name,
                            class: "form-control",
                            value: "aaa",
                            "aria-required": true) %>
                    </div>
                </div>
                <div class="row">
                     <div class="form-group col-xs-8">
                        <%= f.label(:name, _('URL'), class: 'control-label') %>
                        <%= f.text_field(:uri,
                            class: "form-control",
                            value: "bbb",
                            "aria-required": true) %>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-xs-8">
                        <%= f.label(:name, _('Description'), class: 'control-label') %>
                        <%= f.text_area(:description,
                            class: "form-control",
                            value: "ccc",
                            "aria-required": true) %>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-xs-8">
                            <%= f.submit _("Save Repository for Template"), class: "btn btn-default" %>
                    </div>
                </div>
       <% end %>
      </div>
    </div>
  </div>
</div>